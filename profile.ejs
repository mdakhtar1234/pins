<!--yah page profile ka hai-->

<% include ./partials/header.ejs%>

<div class="profile w-full min-h-screen bg-zinc-600 text-white pt-1 ">

  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>
  <div class="profdets flex flex-col items-center mt-10">
  <div class="relative">
   <span id="uploadicon" class="w-7 h-8 absolute button-0 right-0 rounded-full flex items-center justify-center bg-zinc-100 ">
    <i class="text-zinc-900   ri-pencil-line"></i>
   </span>
    <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
      <img class="w-full h-full object-cover rounded-full"
        src="/images/uploads/<%= user.profileImage %>" alt="">
    </div>
  </div>

 
  <h1 class="text-3xl font-semibold mt-3"><%= user.name %></h1>
  <h3 class="text-md">@<%=  user.username %></h3>
  <a href="/edit" class=" mt-3 px-7 py-2 bg-zinc-900 rounded-full text-xs font-semibold">Edit</a>
  <a href="add" class="px-10 py-2 rounded-lg bg-red-600 mt-3 text-xs font-semibold">Add New Post</a>
  </div>
  <div class="carts flex flex-wrap gap-7 px-8 mt-8 flex items-center justify-center ">
  

<div class="card">
      <div class="w-52 h-52 bg-zinc-200 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
      </div>
      <a href="/show/posts" class="inline-block text-xl font-semibold mt-2 flex items-center justify-center">All pins</a>
      <h5 class="text-sm font-medium opacity-60 flex items-center justify-center"><%= user.posts.length %>pins</h5>
    </div>

    

    
  </div>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function (){
    document.querySelector("#uploadform input").click();
  })

  document.querySelector("#uploadform input").addEventListener("change",function(){
    document.querySelector("#uploadform").submit();
  })
</script>
<% include ./partials/footer.ejs%>